{
  "version": 2,
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/opportunities", "dest": "/api/opportunities.py" },
    { "src": "/api/grants", "dest": "/api/grants.py" },
    { "src": "/api/search", "dest": "/api/search.py" },
    { "src": "/api/contract", "dest": "/api/contract.py" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
